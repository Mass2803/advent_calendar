  <!-- Modal -->
  <div class="modal-backdrop" id="modalBackdrop">
    <div class="modal" role="dialog" aria-modal="true">
      <button class="modal-close" id="modalClose" aria-label="Close">√ó</button>
      <div class="modal-header">
        <div class="modal-day-pill" id="modalDayPill">Day 1</div>
        <div class="modal-title" id="modalTitle">Title</div>
      </div>
      <div class="modal-image" id="modalImage">üéÅ</div>
      <div class="modal-body" id="modalBody">Content goes here.</div>
      <a href="#" id="modalLink" class="modal-link" target="_blank" rel="noreferrer">
        <span>‚ûú</span> <span id="modalLinkText">Open link</span>
      </a>
    </div>
  </div>

  <!-- Toast -->
  <div class="toast" id="toast">
    <span>üîí</span>
    <span id="toastText">Too early!</span>
  </div>

  <script>
    /* 
      === EDIT YOUR DAY CONTENT HERE ===
      Each object represents one door (1‚Äì24).
      - day: door number (1‚Äì24)
      - title: heading in the popup
      - message: text in the popup
      - emoji: large emoji shown in popup
      - linkText / linkUrl: optional button at the bottom
    */
    const dayContent = [
      { day: 1, title: "Welcome to December!", emoji: "üéÑ", message: "This part was written on the second so skip to today - enjoy a playlist as an apology", linkText: "Play a Christmas playlist", linkUrl: "https://www.youtube.com/results?search_query=christmas+playlist" },
      { day: 2, title: "Coffee", emoji: "‚òï", message: "A coffee from blank street on me", linkText: "", linkUrl: "" },
      { day: 3, title: "Cosy Lights", emoji: "‚ú®", message: "Hang fairy lights or light a candle to make your space feel extra cosy.", linkText: "", linkUrl: "" },
      { day: 4, title: "Festive Walk", emoji: "üö∂‚Äç‚ôÇÔ∏è", message: "Take a short walk and look for decorations or lights in your neighbourhood.", linkText: "", linkUrl: "" },
      { day: 5, title: "Kindness Day", emoji: "üíå", message: "Send a kind message to someone you haven‚Äôt spoken to in a while.", linkText: "", linkUrl: "" },
      { day: 6, title: "Treat Yourself", emoji: "üç´", message: "Enjoy a little sweet treat &mdash; you‚Äôve earned it.", linkText: "", linkUrl: "" },
      { day: 7, title: "Movie Night", emoji: "üé¨", message: "Watch a festive film (or at least a cosy episode of a favourite show).", linkText: "Find Christmas movies", linkUrl: "https://www.google.com/search?q=best+christmas+movies" },
      { day: 8, title: "Decorate Something", emoji: "üéÄ", message: "Add a festive touch to your desk, room, or background.", linkText: "", linkUrl: "" },
      { day: 9, title: "Hot Drink Break", emoji: "‚òï", message: "Make a hot chocolate, tea or coffee and really savour it.", linkText: "", linkUrl: "" },
      { day: 10, title: "Give a Compliment", emoji: "üòä", message: "Give someone a genuine compliment today.", linkText: "", linkUrl: "" },
      { day: 11, title: "Tiny Tidy-Up", emoji: "üßπ", message: "Spend 5 minutes tidying your space so it feels calmer.", linkText: "", linkUrl: "" },
      { day: 12, title: "Listen to a Song", emoji: "üéµ", message: "Play a Christmas song that always makes you smile.", linkText: "", linkUrl: "" },
      { day: 13, title: "Digital Detox 10", emoji: "üìµ", message: "Take 10 minutes away from screens, just breathing and being.", linkText: "", linkUrl: "" },
      { day: 14, title: "Write a Wish", emoji: "‚≠ê", message: "Write down one wish or intention for the new year.", linkText: "", linkUrl: "" },
      { day: 15, title: "Share a Memory", emoji: "üì∏", message: "Share a favourite winter memory with a friend or family member.", linkText: "", linkUrl: "" },
      { day: 16, title: "Cosy Reading", emoji: "üìö", message: "Read a few pages of a book, blog or article you enjoy.", linkText: "", linkUrl: "" },
      { day: 17, title: "Charity Moment", emoji: "üéÅ", message: "Do something small for someone else &mdash; donate, help, or simply listen.", linkText: "", linkUrl: "" },
      { day: 18, title: "Stretch & Breathe", emoji: "üßò‚Äç‚ôÄÔ∏è", message: "Take five slow deep breaths and gently stretch your body.", linkText: "", linkUrl: "" },
      { day: 19, title: "Bake or Buy", emoji: "üç™", message: "Enjoy a festive snack &mdash; homemade or store-bought both count!", linkText: "", linkUrl: "" },
      { day: 20, title: "Photo Time", emoji: "ü§≥", message: "Take a silly or cosy photo to remember this season.", linkText: "", linkUrl: "" },
      { day: 21, title: "Write a Card", emoji: "üíå", message: "Write a card or message to someone special.", linkText: "", linkUrl: "" },
      { day: 22, title: "Plan a Pause", emoji: "üïØÔ∏è", message: "Schedule a little pocket of rest in the next few days.", linkText: "", linkUrl: "" },
      { day: 23, title: "Favourite Tradition", emoji: "üéä", message: "Think about a tradition you love (or start a new one!).", linkText: "", linkUrl: "" },
      { day: 24, title: "Christmas Eve Magic", emoji: "üéÖ", message: "Slow down, breathe, and soak up the magic of the season.", linkText: "", linkUrl: "" }
    ];

    const calendarGrid = document.getElementById("calendarGrid");
    const todayInfo = document.getElementById("todayInfo");
    const modalBackdrop = document.getElementById("modalBackdrop");
    const modalClose = document.getElementById("modalClose");
    const modalDayPill = document.getElementById("modalDayPill");
    const modalTitle = document.getElementById("modalTitle");
    const modalBody = document.getElementById("modalBody");
    const modalImage = document.getElementById("modalImage");
    const modalLink = document.getElementById("modalLink");
    const modalLinkText = document.getElementById("modalLinkText");
    const toast = document.getElementById("toast");
    const toastText = document.getElementById("toastText");

    // Helper: format date nicely
    function formatDate(date) {
      return date.toLocaleDateString(undefined, {
        weekday: "long",
        year: "numeric",
        month: "long",
        day: "numeric"
      });
    }

    function buildCalendar() {
      const now = new Date();
      const currentYear = now.getFullYear();
      const isDecember = now.getMonth() === 11; // 0-based, December == 11
      const currentDay = now.getDate();

      todayInfo.textContent = `Today is ${formatDate(now)}.`;

      for (let day = 1; day <= 24; day++) {
        const dayData = dayContent.find((d) => d.day === day) || {
          day,
          title: `Day ${day}`,
          message: "Edit the content for this door in the dayContent array.",
          emoji: "üéÅ",
          linkText: "",
          linkUrl: ""
        };

        // Decide if the door is unlocked
        let unlocked = false;
        if (isDecember) {
          unlocked = currentDay >= day;
        } else if (now.getMonth() > 11) {
          // After December, unlock everything
          unlocked = true;
        } else if (now.getMonth() < 11) {
          unlocked = false;
        }

        const dayDiv = document.createElement("div");
        dayDiv.className = "day";

        const doorButton = document.createElement("button");
        doorButton.type = "button";
        doorButton.className = "door" + (unlocked ? "" : " door-locked");
        doorButton.dataset.day = day;

        const inner = document.createElement("div");
        inner.className = "door-inner";

        const numberSpan = document.createElement("div");
        numberSpan.className = "door-number";
        numberSpan.textContent = day;

        const iconSpan = document.createElement("div");
        iconSpan.className = "door-icon";
        iconSpan.textContent = dayData.emoji || "üéÅ";

        const labelSpan = document.createElement("div");
        labelSpan.className = "door-label";
        labelSpan.innerHTML = unlocked ? "Click to open" : "Locked until December " + day;

        const lockBadge = document.createElement("div");
        lockBadge.className = "lock-badge";
        lockBadge.innerHTML = unlocked
          ? "<span>‚úÖ</span><span>Open</span>"
          : "<span>üîí</span><span>Locked</span>";

        const lockText = document.createElement("div");
        lockText.className = "lock-text";
        lockText.textContent = unlocked ? "Ready when you are." : "Opens on Dec " + day;

        inner.appendChild(numberSpan);
        inner.appendChild(iconSpan);
        inner.appendChild(labelSpan);
        inner.appendChild(lockText);
        doorButton.appendChild(inner);
        doorButton.appendChild(lockBadge);
        dayDiv.appendChild(doorButton);
        calendarGrid.appendChild(dayDiv);

        // Click handler
        doorButton.addEventListener("click", () => {
          if (!unlocked) {
            showToast(`Too early! Day ${day} unlocks on December ${day}.`);
            return;
          }
          openModal(dayData);
        });
      }
    }

    function openModal(dayData) {
      modalDayPill.textContent = `Day ${dayData.day}`;
      modalTitle.innerHTML = dayData.title || `Day ${dayData.day}`;
      modalBody.innerHTML = dayData.message || "";
      modalImage.textContent = dayData.emoji || "üéÅ";

      if (dayData.linkUrl && dayData.linkText) {
        modalLink.href = dayData.linkUrl;
        modalLinkText.textContent = dayData.linkText;
        modalLink.style.display = "inline-flex";
      } else {
        modalLink.style.display = "none";
      }

      modalBackdrop.classList.add("open");
    }

    function closeModal() {
      modalBackdrop.classList.remove("open");
    }

    function showToast(message) {
      toastText.textContent = message;
      toast.classList.add("visible");
      clearTimeout(showToast._timeout);
      showToast._timeout = setTimeout(() => {
        toast.classList.remove("visible");
      }, 2300);
    }

    // Very lightweight snow animation
    function createSnowflakes(count = 25) {
      for (let i = 0; i < count; i++) {
        const flake = document.createElement("div");
        flake.className = "snowflake";
        flake.textContent = Math.random() > 0.5 ? "‚ùÑÔ∏è" : "‚ùÖ";
        flake.style.left = Math.random() * 100 + "vw";
        flake.style.animationDuration = 8 + Math.random() * 10 + "s";
        flake.style.animationDelay = Math.random() * 10 + "s";
        document.body.appendChild(flake);
      }
    }

    // Modal & backdrop events
    modalClose.addEventListener("click", closeModal);
    modalBackdrop.addEventListener("click", (e) => {
      if (e.target === modalBackdrop) {
        closeModal();
      }
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") closeModal();
    });

    // Build everything
    buildCalendar();
    createSnowflakes();
  </script>
</body>
</html>
